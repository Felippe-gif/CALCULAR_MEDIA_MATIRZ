def calcular_media(turma):
    medias = []
    for aluno in turma:
        media = sum(aluno) / len(aluno)
        medias.append(f'{media:.2f}')
    return medias

turma = [[5.5, 7.0, 8.7],
         [4.5, 6.9, 8.9],
         [7.8, 8.8, 5.4],
         [0.0, 9.0, 6.7]]

resultado = calcular_media(turma)
print(f'{resultado}')
